#!/bin/sh
# Executed on window manager start or from .xinitrc when using xinit (when you run the startx command)
# General desktop startup settings

# GENERAL
export EDITOR="nvim"
export PATH=$PATH:$HOME/.local/bin 

# DISPLAY
xrandr --dpi 96 # Set DPI to 96

# KEYBOARD
xset r rate 300 50 # Set keyboard rate higher

# AUDIj
/usr/bin/pipewire & # Start pipewire

mpd & # Start mpd

eval `ssh-agent`

# Unclutter, auto hides the cursor
unclutter --start-hidden &
# Set wallpaper
$HOME/.local/bin/setbg &
# Startup script
$HOME/.startup.sh &

