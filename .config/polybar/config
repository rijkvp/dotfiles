[colors]
background = #1e2127
background-alt = #5c6370
background-darker = #9907090c
background-tray = #9907090c

foreground = #c7cfdd

disabled = #aaa
urgent = #77281c

mod-weather     = #c7cfdd
mod-network     = #c7cfdd
mod-network-dis = #aaa
mod-audio       = #c7cfdd
mod-audio-mute  = #aaa
mod-filesystem  = #c7cfdd
mod-memory      = #c7cfdd 
mod-cpu         = #c7cfdd
mod-gpu         = #c7cfdd
mod-date        = #c7cfdd
mod-time        = #c7cfdd

[bar/root]
width = 100%
height = 18

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3

font-0 = Fira Code Nerd Font:style=Medium:size=10;1 # Modules 1
font-1 = Overpass Nerd Font:style=Bold:size=12;2 # Window 2
font-2 = Overpass Nerd Font:style=Bold:size=11;2 # WM 3

modules-left = i3

modules-center = xwindow
fixed-center = false

modules-right = weather pulseaudio memory cpu date time

separator = " "
separator-foreground = #77ffffff

module-margin = 1 

tray-position = right
tray-padding = 4
tray-background = ${colors.background-tray}

cursor-click = pointer
cursor-scroll = ns-resize
enable-ipc = true

[module/xwindow]
type = internal/xwindow
label = %title:0:50:..%
label-font = 2
format-background = #8820252d
format-padding = 4 

[module/i3]
type = internal/i3

pin-workspaces = true
reverse-scroll = true
index-sort = true

format = <label-state> <label-mode>
format-font = 3

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-padding = 4

label-unfocused = %index% 
label-unfocused-padding = 4

label-visible = %index% 
label-visible-padding = 4

label-urgent = %index% 
label-urgent-background = ${colors.urgent}
label-urgent-padding = 4

[module/cpu]
type = custom/script
interval = 1
exec = ~/.config/polybar/scripts/cpu.sh

label = %output:9%
format-prefix = "龍 "
format-foreground = ${colors.mod-cpu}

[module/gpu]
type = custom/script
interval = 1
exec = ~/.config/polybar/scripts/nvidia-smi.sh

label = %output:9%
format-prefix = " "
format-foreground = ${colors.mod-gpu}

[module/memory]
type = internal/memory
interval = 1 
format-prefix = " "
label = %gb_used:0:3%/%gb_total% 
format-foreground = ${colors.mod-memory}

[module/date]
type = internal/date

date = "%d-%m-%Y"
format-prefix = " "
label = %date%
format-foreground = ${colors.mod-date}

[module/time]
type = internal/date

time = %H:%M:%S
format-prefix = " "
label = %time%
format-foreground = ${colors.mod-time}

[module/pulseaudio]
type = internal/pulseaudio

format-volume-font = 1
format-volume-prefix = "墳 "
format-volume = <label-volume>
format-volume-foreground = ${colors.mod-audio}

format-muted-font = 1
format-muted-prefix = " "
format-muted = MUTE
format-muted-foreground = ${colors.mod-audio-mute}

label-volume = %percentage%%     


[module/networkspeed]
type = internal/network
interface = enp9s0
interval = 0.5
label-connected =  %upspeed:6%  %downspeed:6%
format-connected = <label-connected>
label-disconnected = "NOPE :)"
format-disconnected = <label-disconnected>
label-disconnected-foreground = ${colors.mod-network-dis}
format-connected-foreground = ${colors.mod-network}

[module/filesystem]
type = internal/fs

mount-0 = /home

interval = 20

format-mounted-prefix = " "
label-mounted = %free:0:6% free
format-mounted = <label-mounted>
format-mounted-foreground = ${colors.mod-filesystem}

[module/weather]
type = custom/script

exec = ~/.config/polybar/scripts/weather.sh 
interval = 300
format-prefix = "  "
label = %output%
format-foreground = ${colors.mod-weather}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0
