[colors]
background = #aa000000
background-alt = #aa333333
background-darker = #aa111111
background-tray = #aa000000

foreground = #c7cfdd

disabled = #aaa
urgent = #77281c

mod-weather     = #c7cfdd
mod-network     = #c7cfdd
mod-network-dis = #aaa
mod-audio       = #c7cfdd
mod-audio-mute  = #aaa

mod-filesystem  = #c7cfdd
mod-cpu         = #c7cfdd
mod-gpu         = #c7cfdd
mod-memory      = #c7cfdd 

mod-date        = #c7cfdd
mod-time        = #c7cfdd

[bar/root]
width = 100%
height = 18

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3

# AUR Package: https://aur.archlinux.org/packages/nerd-fonts-ibm-plex-mono/
font-0 = BlexMono Nerd Font:style=SemiBold:size=10;2 # Modules 1
font-1 = IBM Plex Mono:style=Medium:size=12;2 # Window 2
font-2 = IBM Plex Mono:style=Bold:size=12;2 # WM 3 - Focused
font-3 = IBM Plex Mono:style=Light:size=12;2 # WM 4 - Unfocused

modules-left = i3
modules-center = xwindow
modules-right = weather pulseaudio cpu gpu memory date time

fixed-center = true
module-margin = 1 

separator = "|"
separator-foreground = #aaaaaaaa


wm-restack = true

tray-position = right
tray-maxsize = 16
tray-padding = 6
tray-background = ${colors.background-tray}

cursor-click = pointer
cursor-scroll = ns-resize
enable-ipc = true

[module/xwindow]
type = internal/xwindow
label = %title:0:50:..%
label-font = 2
format-background = ${colors.background-darker}
format-padding = 5 

[module/i3]
type = internal/i3

pin-workspaces = true
reverse-scroll = true
index-sort = true

format = <label-state> <label-mode>
format-font = 3

label-focused = [%index%]
label-focused-background = ${colors.background-alt}
label-focused-padding = 1
label-focused-font = 3

label-unfocused = [%index%]
label-unfocused-padding = 1
label-unfocused-font = 4

label-visible = [%index%]
label-visible-padding = 1

label-urgent = [%index%]
label-urgent-background = ${colors.urgent}
label-urgent-padding = 1

[module/cpu]
type = custom/script
interval = 1
exec = ~/.config/polybar/scripts/cpu.sh

label = %output:9%
format-prefix = "龍 "
format-foreground = ${colors.mod-cpu}

[module/gpu]
type = custom/script
interval = 1
exec = ~/.config/polybar/scripts/nvidia-smi.sh

label = %output:9%
format-prefix = " "
format-foreground = ${colors.mod-gpu}

[module/memory]
type = internal/memory
interval = 1 
format-prefix = " "
label = %gb_used:0:3%/%gb_total% 
format-foreground = ${colors.mod-memory}

[module/date]
type = internal/date

date = "%d-%m-%Y"
format-prefix = " "
label = %date%
format-foreground = ${colors.mod-date}

[module/time]
type = internal/date

time = %H:%M:%S
format-prefix = " "
label = %time%
format-foreground = ${colors.mod-time}

[module/pulseaudio]
type = internal/pulseaudio

format-volume-font = 1
format-volume-prefix = "墳 "
format-volume = <label-volume>
format-volume-foreground = ${colors.mod-audio}

format-muted-font = 1
format-muted-prefix = " "
format-muted = MUTE
format-muted-foreground = ${colors.mod-audio-mute}

label-volume = %percentage%%     


[module/networkspeed]
type = internal/network
interface = enp9s0
interval = 0.5
label-connected =  %upspeed:6%  %downspeed:6%
format-connected = <label-connected>
label-disconnected = "NOPE :)"
format-disconnected = <label-disconnected>
label-disconnected-foreground = ${colors.mod-network-dis}
format-connected-foreground = ${colors.mod-network}

[module/filesystem]
type = internal/fs

mount-0 = /home

interval = 20

format-mounted-prefix = " "
label-mounted = %free:0:6% free
format-mounted = <label-mounted>
format-mounted-foreground = ${colors.mod-filesystem}

[module/weather]
type = custom/script

exec = ~/.config/polybar/scripts/weather.sh 
interval = 300
format-prefix = "  "
label = %output%
format-foreground = ${colors.mod-weather}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0
